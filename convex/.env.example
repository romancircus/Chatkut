# Convex Backend Environment Variables
# Copy this file to .env.local and fill in your credentials
# The Convex backend reads environment variables from convex/.env.local

# Cloudflare Stream (for video uploads and HLS preview)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_STREAM_TOKEN=

# Cloudflare R2 (for image and MP4 storage)
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET_NAME=chatkut-media

# Dedalus AI (multi-model routing)
DEDALUS_API_KEY=
